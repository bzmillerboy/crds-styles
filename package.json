    "bootstrap-sass": "*",
    "svg-sprite": "^1.3.6"
  },
  "devDependencies": {
    "cheerio": "^0.22.0",
    "commander": "^2.9.0",
    "node-sass": "^4.1.1",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.2",
    "sass-loader": "^4.1.1",
    "stylelint-webpack-plugin": "^0.7.0",
    "webpack": "^1.14.0",
    "webpack-merge": "^0.17.0"
  }
}
